<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ymlion.pluginuninstalled.Plugin1Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Hello, this is plugin 1 activity."/>

    <Button
        android:id="@+id/open_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="open plugin2"/>

    <Button
        android:id="@+id/open_p3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/open_p2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="open plugin3"/>

    <Button
        android:id="@+id/open_p4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/open_p3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="open plugin4"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="171dp"
        android:src="@drawable/ic_android"/>
</RelativeLayout>
